<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DonorVolunteerActivity"
    android:background="@color/black"
    android:backgroundTint="@color/black">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="52dp"/>

    <TextView
        android:id="@+id/txtIma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I'm a"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/imgLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btnDonor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Donor"
        android:textColor="@color/black"
        android:backgroundTint="#D9D9D9"
        app:layout_constraintTop_toBottomOf="@+id/txtIma"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="62dp" />

    <Button
        android:id="@+id/btnVolunteer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volunteer"
        android:textColor="@color/black"
        android:backgroundTint="#D9D9D9"
        app:layout_constraintTop_toBottomOf="@+id/btnDonor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="62dp" />

</androidx.constraintlayout.widget.ConstraintLayout>